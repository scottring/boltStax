rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserCompany() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId;
    }
    
    function isUserInCompany(companyId) {
      return isAuthenticated() && getUserCompany() == companyId;
    }

    // Companies collection
    match /companies/{companyId} {
      allow read: if isUserInCompany(companyId);
      allow write: if false; // Company creation/updates handled through admin or backend
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if false; // User management handled through admin or backend
    }

    // Suppliers collection
    match /suppliers/{supplierId} {
      allow read: if isAuthenticated() && 
        (exists(/databases/$(database)/documents/companySuppliers/$(getUserCompany())/suppliers/$(supplierId)) ||
         exists(/databases/$(database)/documents/supplierCompanies/$(supplierId)/companies/$(getUserCompany())));
      allow write: if isAuthenticated() && 
        exists(/databases/$(database)/documents/companySuppliers/$(getUserCompany())/suppliers/$(supplierId));
    }

    // Products collection
    match /products/{productId} {
      allow read: if isAuthenticated() && 
        exists(/databases/$(database)/documents/companyProducts/$(getUserCompany())/products/$(productId));
      allow write: if isAuthenticated() && 
        exists(/databases/$(database)/documents/companyProducts/$(getUserCompany())/products/$(productId));
    }

    // Questions collection
    match /questions/{questionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        exists(/databases/$(database)/documents/companies/$(getUserCompany())/admins/$(request.auth.uid));
    }

    // Question tags collection
    match /questionTags/{tagId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        exists(/databases/$(database)/documents/companies/$(getUserCompany())/admins/$(request.auth.uid));
    }
  }
}
